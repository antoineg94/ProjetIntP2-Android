<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier les informations"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrer votre prÃ©nom"/>

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrer votre nom"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ðŸ“§ Entrer votre adresse courriel"
        android:inputType="textEmailAddress"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ðŸ”’ Entrer votre mot de passe"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_profile"
        app:srcCompat="@drawable/default_profilee_image" />

    <Button
        android:id="@+id/btSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir une photo"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btSaveChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sauver les modifications"
        android:layout_marginTop="24dp"/>
</LinearLayout>
