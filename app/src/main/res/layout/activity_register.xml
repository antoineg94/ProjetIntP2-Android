<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btCreationCompte">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Nom"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etNom"
                android:layout_marginTop="10dp"
                android:hint="Prénom"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPrenom"
                android:layout_marginTop="10dp"
                android:hint="Adresse e-mail"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etMotDePasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etEmail"
                android:layout_marginTop="10dp"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="24sp" />
            <EditText
                android:id="@+id/etConfirmationMotDePasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etMotDePasse"
                android:layout_marginTop="10dp"
                android:hint="Confirmation de Mot de passe"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btChoixImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etConfirmationMotDePasse"
                android:layout_marginTop="16dp"
                android:text="photo de profil"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivImageProfil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/btChoixImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profilee_image"
                app:srcCompat="@drawable/default_profilee_image" />
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btCreationCompte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Créer un compte" />

</RelativeLayout>
